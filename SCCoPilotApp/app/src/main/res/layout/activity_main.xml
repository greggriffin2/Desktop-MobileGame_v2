<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/gugiregular"
        android:textSize="50dp"
        android:background="@drawable/rounded_edit_text"
        android:backgroundTint="@color/lampBlack"
        android:textColor="@color/darkGray"
        android:maxLength="18"
        android:textColorHint="@color/darkGray"
        android:hint="Enter code"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/shipRed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/gugiregular"
        android:text="Play!"
        app:layout_constraintTop_toBottomOf="@id/inputCode"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onClickPlay" />

    <Button
        android:id="@+id/connectingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/shipRed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/gugiregular"
        android:text="Connecting!"
        app:layout_constraintTop_toBottomOf="@id/inputCode"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout><!--   android:name="androidx.navigation.fragment.NavHostFragment"     -->
